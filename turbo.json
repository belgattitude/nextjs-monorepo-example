{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "**/tsconfig*.json"],
  "pipeline": {
    "build": {
      "outputs": ["dist/**"],
      "outputMode": "full",
      // This repo example relies on tsconfig paths to ease starting
      "dependsOn": ["^build"]
    },
    "test": {},
    "test-unit": {},
    "lint": {
      "env": ["TIMING"]
    },
    "lint-styles": {},
    "typecheck": {},
    "build-storybook": {},
    "clean": {
      "cache": false
    }
  }
}
