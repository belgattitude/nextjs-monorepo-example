{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "env": ["NEXT_BUILD_ENV_*", "NEXT_PUBLIC_*", "SENTRY_*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "vercel-build": {
      "env": ["NEXT_BUILD_ENV_*", "NEXT_PUBLIC_*", "SENTRY_*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "typecheck": {},
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^codegen"]
    }
  }
}
