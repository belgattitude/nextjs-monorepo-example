{
  "name": "remix-app",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "vite build && vite build --ssr",
    "dev": "vite dev",
    "start": "remix-serve ./build/index.js",
    "clean": "rimraf ./.cache ./coverage ./src/tailwind.css ./api/index.js ./api/index.js.map ./public/build ./tsconfig.tsbuildinfo",
    "fix-all-files": "eslint . --ext .ts,.tsx,.js,.jsx,.cjs,.mjs,.mdx,.graphql --fix",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx,.cjs,.mjs,.mdx,.graphql --cache --cache-location ../../.cache/eslint/remix-app.eslintcache",
    "lint-styles": "stylelint 'src/**/*.css'",
    "remix-dev": "remix dev",
    "test-unit": "vitest run",
    "test-unit-watch": "vitest watch --ui",
    "typecheck": "tsc --project ./tsconfig.json --noEmit"
  },
  "dependencies": {
    "@remix-run/node": "2.8.0",
    "@remix-run/react": "2.8.0",
    "@remix-run/serve": "2.8.0",
    "@your-org/common-i18n": "workspace:^",
    "@your-org/ts-utils": "workspace:^",
    "isbot": "3.8.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "2.8.0",
    "@remix-run/eslint-config": "2.8.0",
    "@tailwindcss/forms": "0.5.7",
    "@testing-library/dom": "9.3.4",
    "@testing-library/jest-dom": "6.4.2",
    "@testing-library/react": "14.2.1",
    "@testing-library/user-event": "14.5.2",
    "@types/node": "20.11.24",
    "@types/react": "18.2.61",
    "@types/react-dom": "18.2.19",
    "@vitest/coverage-v8": "1.3.1",
    "@vitest/ui": "1.3.1",
    "autoprefixer": "10.4.18",
    "cssnano": "6.0.5",
    "eslint": "8.57.0",
    "postcss": "8.4.35",
    "prettier": "3.2.5",
    "stylelint": "16.2.1",
    "stylelint-config-standard": "36.0.0",
    "tailwindcss": "3.4.1",
    "typescript": "5.3.3",
    "vite": "5.1.4",
    "vite-tsconfig-paths": "4.3.1",
    "vitest": "1.3.1"
  },
  "engines": {
    "node": ">=18.14.0"
  }
}
