{
  "name": "remix-app",
  "version": "1.2.2",
  "license": "MIT",
  "private": true,
  "homepage": "https://github.com/belgattitude/nextjs-monorepo-example",
  "repository": {
    "type": "git",
    "url": "https://github.com/belgattitude/nextjs-monorepo-example",
    "directory": "apps/remix-app"
  },
  "author": {
    "name": "Vanvelthem SÃ©bastien",
    "url": "https://github.com/belgattitude"
  },
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -o ./app/tailwind.css",
    "dev": "npm-run-all --parallel --print-label watch-tailwind remix-dev",
    "watch-tailwind": "tailwindcss -o ./app/tailwind.css --watch",
    "remix-dev": "remix dev",
    "clean": "rimraf --no-glob ./.cache ./coverage ./tsconfig.tsbuildinfo ./.eslintcache && jest --clear-cache",
    "?share:static:symlink": "echo 'Use this command to link assets, locales... from shared static folder'",
    "share:static:symlink": "rimraf ./public/shared-assets && symlink-dir ../../static/assets ./public/shared-assets",
    "?share:static:hardlink": "echo 'Use this command to link assets, locales... from shared static folder'",
    "share:static:hardlink": "rimraf ./public/shared-assets && syncdir ../../static/assets ./public/shared-assets --copy",
    "test": "run-s 'test:*'",
    "test:unit": "jest --config jest.config.js --maxWorkers=50% --color $@",
    "ci-test:unit": "jest --config jest.config.js --runInBand --color $@",
    "typecheck": "tsc --project ./tsconfig.json --noEmit",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint-style": "stylelint 'app/**/*.css'",
    "fix:all-files": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "postinstall": "remix setup node"
  },
  "dependencies": {
    "@emotion/cache": "11.7.1",
    "@emotion/react": "11.7.1",
    "@emotion/server": "11.4.0",
    "@emotion/styled": "11.6.0",
    "@remix-run/react": "1.1.3",
    "@remix-run/serve": "1.1.3",
    "@remix-run/vercel": "1.1.3",
    "@vercel/node": "1.12.1",
    "@your-org/core-lib": "workspace:*",
    "@your-org/ui-lib": "workspace:*",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "remix": "1.1.3",
    "stylelint": "14.5.0",
    "stylelint-config-standard": "25.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.17.2",
    "@emotion/babel-plugin": "11.7.2",
    "@remix-run/dev": "1.1.3",
    "@tailwindcss/aspect-ratio": "0.4.0",
    "@tailwindcss/forms": "0.4.0",
    "@tailwindcss/line-clamp": "0.3.1",
    "@testing-library/jest-dom": "5.16.2",
    "@testing-library/react": "12.1.2",
    "@testing-library/react-hooks": "7.0.2",
    "@types/react": "17.0.39",
    "@types/react-dom": "17.0.11",
    "@typescript-eslint/eslint-plugin": "5.11.0",
    "@typescript-eslint/parser": "5.11.0",
    "autoprefixer": "10.4.2",
    "eslint": "8.9.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-import-resolver-typescript": "2.5.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jest": "26.1.0",
    "eslint-plugin-jest-formatting": "3.1.0",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.28.0",
    "eslint-plugin-react-hooks": "4.3.0",
    "eslint-plugin-regexp": "1.5.1",
    "eslint-plugin-sonarjs": "0.11.0",
    "eslint-plugin-testing-library": "5.0.5",
    "jest": "27.5.1",
    "jest-css-modules-transform": "4.3.0",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.6",
    "prettier": "2.5.1",
    "stylelint-config-prettier": "9.0.3",
    "tailwindcss": "3.0.22",
    "ts-jest": "27.1.3",
    "typescript": "4.5.5"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
