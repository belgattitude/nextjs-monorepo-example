{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "pipeline": {
    "build-mesh": {
      "outputs": [".mesh/**"]
    },
    "build": {
      "outputs": ["dist/**"],
      "dependsOn": ["build-mesh"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["build-mesh"]
    }
  }
}
